{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "wazframe/frame",
  "version": "0.1.0",
  "title": "Frame",
  "category": "layout-primitives",
  "description": "Keeps consistent aspect ratio for images and video",
  "textdomain": "wf-layout",
  "icon": "cover-image",
  "attributes": {
    "mediaID": {
      "type": "number"
    },
    "mediaURL": {
      "type": "string",
      "source": "attribute",
      "selector": "img",
      "attribute": "src"
    },
    "mediaAlt": {
      "type": "string",
      "source": "attribute",
      "selector": "img",
      "attribute": "alt",
      "default": ""
    },
    "mediaCaption": {
      "type": "string",
      "source": "html",
      "selector": "figcaption"
    },
    "title": {
      "type": "string",
      "source": "attribute",
      "selector": "img",
      "attribute": "title"
    },
    "url": {
      "type": "string",
      "source": "attribute",
      "selector": "figure > a",
      "attribute": "href"
    },
    "rel": {
      "type": "string",
      "source": "attribute",
      "selector": "figure > a",
      "attribute": "rel"
    },
    "linkTarget": {
      "type": "string",
      "source": "attribute",
      "selector": "figure > a",
      "attribute": "target"
    },
    "linkClass": {
      "type": "string",
      "source": "attribute",
      "selector": "figure > a",
      "attribute": "class"
    },
    "style": {
      "type": "object",
      "size": {
        "type": "object",
        "aspectRatio": {
          "type": "string",
          "default": "16 / 9"
        },
        "portraitRatio": {
          "type": "string",
          "default": "16 / 9"
        }
      }
    }
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}
