{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "wazframe/sidebar",
  "version": "0.2.0",
  "title": "Sidebar",
  "category": "layout-primitives",
  "description": "Sidebar allows for a main section and sidebar section to layout content",
  "textdomain": "wf-layout",
  "icon": "align-right",
  "attributes": {
    "flex": {
      "type": "object",
      "alignItems": {
        "type": "string",
        "default": "stretch"
      }
    },
    "blockGap": {
      "type": "string"
    },
    "width": {
      "type": "string"
    },
    "contentWidth": {
      "type": "string"
    },
    "sidebarRight": {
      "type": "boolean",
      "default": false
    },
    "tagName": {
      "type": "string",
      "default": "div"
    },
    "templateLock": {
      "type": ["string", "boolean"],
      "enum": ["all", "insert", false]
    }
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}
