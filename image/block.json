{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "wazframe/image",
  "version": "0.1.0",
  "title": "Image Alone",
  "category": "layout-primitives",
  "description": "Image block without any wrapper",
  "textdomain": "wf-layout",
  "icon": "cover-image",
  "attributes": {
    "mediaID": {
      "type": "number"
    },
    "mediaURL": {
      "type": "string",
      "source": "attribute",
      "selector": "img",
      "attribute": "src"
    },
    "mediaAlt": {
      "type": "string",
      "source": "attribute",
      "selector": "img",
      "attribute": "alt",
      "default": ""
    },
    "mediaCaption": {
      "type": "string",
      "source": "html",
      "selector": "figcaption"
    },
    "title": {
      "type": "string",
      "source": "attribute",
      "selector": "img",
      "attribute": "title"
    },
    "url": {
      "type": "string",
      "source": "attribute",
      "selector": "figure > a",
      "attribute": "href"
    },
    "rel": {
      "type": "string",
      "source": "attribute",
      "selector": "figure > a",
      "attribute": "rel"
    },
    "linkTarget": {
      "type": "string",
      "source": "attribute",
      "selector": "figure > a",
      "attribute": "target"
    },
    "linkClass": {
      "type": "string",
      "source": "attribute",
      "selector": "figure > a",
      "attribute": "class"
    }
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}
